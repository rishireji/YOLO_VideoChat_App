rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for the Users collection
    match /Users/{userId} {
      // Users can only read, create, or update their own identity document
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
      
      // Explicitly allow management of the personal files subcollection
      // Using 'read' allows both 'get' (single doc) and 'list' (collection query)
      match /files/{fileId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}