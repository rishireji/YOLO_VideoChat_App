rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Profiles: Everyone authenticated can view profiles, only owners can edit.
    match /Users/{userId} {
      // allow read is a shorthand for get and list.
      // We allow authenticated users to read any profile document or list the collection.
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Vault files: Strictly private to the owner.
      match /files/{fileId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Friends: Reciprocal access for handshakes. 
      // Both the owner (userId) and the connected peer (friendId) need access to write the link.
      match /friends/{friendId} {
        allow read: if request.auth != null && (request.auth.uid == userId || request.auth.uid == friendId);
        allow write: if request.auth != null && (request.auth.uid == userId || request.auth.uid == friendId);
      }
    }
    
    // Deny all other access paths by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}