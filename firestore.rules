rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /Users/{userId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
      
      match /files/{fileId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /friends/{friendId} {
        // Users can read their own social link registry
        allow read: if request.auth != null && request.auth.uid == userId;
        // Mutual creation: A user can write to their own registry OR a trusted peer can write the reciprocal link
        allow write: if request.auth != null && (request.auth.uid == userId || request.auth.uid == friendId);
      }
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}